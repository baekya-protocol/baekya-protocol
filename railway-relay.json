{
  "name": "baekya-relay-server",
  "description": "백야 프로토콜 중계서버 - 풀노드와 클라이언트 간 통신 중계",
  "version": "1.0.0",
  "main": "p2p-relay-server.js",
  "scripts": {
    "start": "node p2p-relay-server.js",
    "relay": "node p2p-relay-server.js",
    "dev": "nodemon p2p-relay-server.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.13.0",
    "uuid": "^9.0.0"
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "$PORT",
    "RELAY_PASSWORD": "YOUR_RELAY_PASSWORD_HERE",
    "RELAY_LOCATION": "37.5665,126.9780"
  },
  "healthcheck": {
    "path": "/api/relay-status",
    "interval": 30
  },
  "deployment": {
    "type": "web",
    "restart": "always"
  },
  "railway": {
    "buildCommand": "npm install",
    "startCommand": "npm start"
  }
}