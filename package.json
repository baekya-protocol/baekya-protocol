{
  "name": "baekya-listing-server",
  "description": "백야 프로토콜 중계서버 리스팅 서버 - 모든 중계서버 목록 관리",
  "version": "1.0.0",
  "main": "listing-server.js",
  "scripts": {
    "start": "node listing-server.js",
    "dev": "nodemon listing-server.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "$PORT"
  },
  "healthcheck": {
    "path": "/health",
    "interval": 30
  },
  "deployment": {
    "type": "web",
    "restart": "always"
  }
}
